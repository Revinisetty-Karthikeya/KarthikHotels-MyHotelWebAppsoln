@model IEnumerable<MyHotelWebApp.Models.Room>

@{
    ViewBag.Title = "CustomerRoomIndex";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
        }

        #title {
            color: #007BFF;
            text-align: center;
        }

        aside {
            border: none;
            box-shadow: 0 0 10px rgba(0,0,0,0.15);
        }

        table {
            width: 100%;
        }

        th {
            text-align: left;
        }

        button {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        img {
            width: 100px;
            height: 100px;
        }
    </style>
</head>
<body>
    <h1 id="title">
        @*<img src="~/Content/Pics/User.jpg" class="rounded-circle mx-auto d-block" alt="User" style="width: 100px; height: 100px;" />*@
        Rooms
    </h1>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hotel.HotelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roomtype)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomPriced)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomAvailability)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Hotel.HotelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Roomtype)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomPriced)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomAvailability)
                </td>
                <td>
                    @Html.ActionLink("Details", "CustomerRoomDetails", "Room", new { id = item.RoomId }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
