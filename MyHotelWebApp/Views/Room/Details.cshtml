@model MyHotelWebApp.Models.Room

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
        }

        #title {
            color: #007BFF;
            text-align: center;
        }

        aside {
            border: none;
            box-shadow: 0 0 10px rgba(0,0,0,0.15);
        }

        table {
            width: 100%;
        }

        th {
            text-align: left;
        }

        button {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        img {
            width: 100px;
            height: 100px;
        }
    </style>
</head>
<body>
    <h1 id="title">
        Details
    </h1>

    <div>
        <h4>Room</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Hotel.HotelName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Hotel.HotelName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Roomtype)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Roomtype)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RoomPriced)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RoomPriced)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RoomAvailability)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RoomAvailability)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.RoomId }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Back to List", "Index", new { id = Model.HotelId }, new { @class = "btn btn-Primary" })
    </p>
</body>
</html>
