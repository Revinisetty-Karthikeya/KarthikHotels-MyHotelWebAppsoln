@model IEnumerable<MyHotelWebApp.Models.Hotel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
        }

        #title {
            color: #007BFF;
            text-align: center;
        }

        img {
            width: 100px;
            height: 100px;
        }
    </style>
</head>
<body>
    <h1 id="title">
        Index
    </h1>

    <p>
        @Html.ActionLink("Create New", "Create", "Hotel", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HotelID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelPhone)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelPhone)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Hotel", new { id = item.HotelID }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Details", "Details", "Hotel", new { id = item.HotelID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "Delete", "Hotel", new { id = item.HotelID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
